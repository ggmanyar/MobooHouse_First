<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="hello.hellospring.repository.MemberMapper">

    <select id="findByName" parameterType="String" resultType="hello.hellospring.domain.Member">
        SELECT * FROM opentutorials.member WHERE name = #{name}
    </select>

    <select id="findById" parameterType="Long" resultType="hello.hellospring.domain.Member">
        SELECT * FROM opentutorials.member WHERE id = #{id}
    </select>

    <insert id="save" parameterType="hello.hellospring.domain.Member">
        INSERT INTO opentutorials.member(name) VALUES (#{name})
    </insert>

    <select id="findAll" resultType="hello.hellospring.domain.Member">
        SELECT * FROM opentutorials.member;
    </select>

</mapper>